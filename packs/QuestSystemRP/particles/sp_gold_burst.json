{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "superquester:sp_gold_burst",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/sp_gold_glow"
      }
    },
    "curves": {
      "variable.particle_age_normalized": {
        "type": "linear",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 1.0]
      },
      "variable.size_curve": {
        "type": "bezier",
        "input": "v.particle_age_normalized",
        "horizontal_range": 1.0,
        "nodes": [0.0, 0.4, 0.8, 0.3, 0.0]
      },
      "variable.alpha_curve": {
        "type": "bezier",
        "input": "v.particle_age_normalized",
        "horizontal_range": 1.0,
        "nodes": [0.0, 1.0, 1.0, 0.6, 0.0]
      }
    },
    "components": {
      "minecraft:emitter_local_space": {
        "position": true,
        "velocity": false
      },
      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },
      "minecraft:emitter_lifetime_once": {
        "active_time": 0.01
      },
      "minecraft:emitter_shape_sphere": {
        "radius": 0.1,
        "direction": "outwards"
      },
      "minecraft:particle_initial_speed": "Math.random(2.0, 4.5)",
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "Math.random(0.6, 1.2)"
      },
      "minecraft:particle_appearance_billboard": {
        "size": [
          "0.15 + (0.25 * v.size_curve)",
          "0.15 + (0.25 * v.size_curve)"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 64,
          "texture_height": 64,
          "uv": [0, 0],
          "uv_size": [64, 64]
        }
      },
      "minecraft:particle_appearance_tinting": {
        "color": [
          "Math.lerp(1.0, 1.0, v.particle_age_normalized)",
          "Math.lerp(0.85, 0.6, v.particle_age_normalized)",
          "Math.lerp(0.2, 0.0, v.particle_age_normalized)",
          "v.alpha_curve"
        ]
      },
      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [0, -3.0, 0],
        "linear_drag_coefficient": 2.5
      },
      "minecraft:particle_motion_parametric": {
        "relative_position": [
          "Math.cos(v.particle_age * 18) * (0.3 - (v.particle_age_normalized * 0.3))",
          "0",
          "Math.sin(v.particle_age * 18) * (0.3 - (v.particle_age_normalized * 0.3))"
        ]
      }
    }
  }
}
